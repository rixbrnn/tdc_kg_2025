##################
# Propriedades de dados
##################

:customerId a owl:DatatypeProperty ;
    rdfs:label "customer id" ;
    rdfs:domain :Customer ;
    rdfs:range  xsd:integer .

:employeeId a owl:DatatypeProperty ;
    rdfs:label "employee id" ;
    rdfs:domain :Employee ;
    rdfs:range  xsd:integer .

:invoiceId a owl:DatatypeProperty ;
    rdfs:label "invoice id" ;
    rdfs:domain :Invoice ;
    rdfs:range  xsd:integer .

:invoiceDate a owl:DatatypeProperty ;
    rdfs:label "invoice date" ;
    rdfs:domain :Invoice ;
    rdfs:range  xsd:dateTime .

:total a owl:DatatypeProperty ;
    rdfs:label "invoice total" ;
    rdfs:domain :Invoice ;
    rdfs:range  xsd:decimal .

:unitPrice a owl:DatatypeProperty ;
    rdfs:label "unit price" ;
    rdfs:domain :InvoiceLine ;
    rdfs:range  xsd:decimal .

:quantity a owl:DatatypeProperty ;
    rdfs:label "quantity" ;
    rdfs:domain :InvoiceLine ;
    rdfs:range  xsd:integer .

:title a owl:DatatypeProperty ;
    rdfs:label "job title" ;
    rdfs:domain :Employee ;
    rdfs:range  xsd:string .

:fullName a owl:DatatypeProperty ;
    rdfs:label "full name" ;
    rdfs:range  xsd:string .

:name a owl:DatatypeProperty ;
    rdfs:label "name" ;
    rdfs:range  xsd:string .

